drop function if exists get_participants_of_booking;
create function get_participants_of_booking(booking_id int) returns table(user_id int, name text, email text, administrator boolean )
as $$
  select u.userid, u.name, u.email, u.administrator
  from sqills.participants p
  join sqills.users u on u.userid = p.userid
  where p.bookingid = booking_id;
  $$
  language sql;


